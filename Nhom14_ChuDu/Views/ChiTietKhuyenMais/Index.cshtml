@model PagedList.IPagedList<Nhom14_ChuDu.Models.ChiTietKhuyenMai>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Chi tiết khuyễn mãi</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên khuyến mãi
        </th>
        <th>
            Tên phòng
        </th>
        <th>
            Giá
        </th>
        <th>
           Thời gian
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="height: 5rem; text-align: center">
            <td>
                @Html.DisplayFor(modelItem => item.KhuyenMai.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhongK.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGian)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Chi tiết", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Xóa", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

