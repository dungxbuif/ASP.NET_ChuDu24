@model IEnumerable<Nhom14_ChuDu.Models.KhachSan>
@{
    ViewBag.Title = "Tìm Kiếm Khách Sạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="detail_hotel">
    <div class="container">
        <p>Danh sách khách sạn ở @foreach (var item in Model) { @item.ThanhPho.Ten ; break; }</p>
        <div class="hotel-of-city">            
            @foreach (var item in Model)
            {
            <div class="container-hotel">
                <div class="hotel-mg">
                    <div class="left-container">
                        @{
                            string ImagePath = "~/Image/Khách sạn/" + @item.Anh;
                        }
                        <img class="w-100" src="@Url.Content(ImagePath)" alt="">
                    </div>
                    <div class="right-container">
                        <h4 style="font-weight: 500;">@item.Ten</h4>
                        <p style="color: #666; font-size: 13px;">Địa chỉ: @item.DiaChi</p>
                        <p style="color: #666; font-size: 13px;">@item.MoTa</p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>

