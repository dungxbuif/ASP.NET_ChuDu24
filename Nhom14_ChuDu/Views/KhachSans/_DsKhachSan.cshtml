@model IEnumerable<Nhom14_ChuDu.Models.KhachSan>
<div style="margin-top:20px;" class="main-km">
    <div class="container">
        <div style="width: 100%; color:#666; font-family:Arial; font-weight:400; font-size:18px;">
            <p style="color:#666; font-family:Arial; font-weight:400; font-size:18px;">TOP KHUYẾN MÃI</p>
            <div style="width: 50px; margin-left:0px;margin-top:20px; height: 3px; background-color: #86b817;"></div>
        </div>
        <div class="container-item top">
            <div class="row">
                @foreach (var item in Model)
                {
                <div class="col-3">
                    <div class="item-khachsan">
                        <a href="@Url.Action("Detail","KhachSans", new { id = item.IDKS })">
                            <div class="product-img item-zoom">
                                @{
                                    string ImagePath = "~/Image/Khách sạn/" + item.Anh;
                                }
                                <img class="w-100" src="@Url.Content(ImagePath)" alt="">
                                <div class="detail-item">
                                    <input type="button" value="XEM CHI TIẾT" name="btn-detail" class="btn-detail"/>
                                </div>
                            </div>
                            <p style="height:30px; color:#666">@Html.DisplayFor(modelItem => item.Ten)</p>
                            <p style="text-transform:none; font-weight:100;">@Html.DisplayFor(modelItem => item.MoTa)</p>
                        </a>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>
